<%- include("partials/header.ejs") %>

<div class="cover">
    <div class="container">
        <h1>Welcome To My Blog</h1>
        <p>Here you will find information about places to visit in England</p>
    </div>
</div>

<div class="container">
    <% for (var i=0; i < placesToVisit.length; i++){ %>
    <div class="box">
        <div>
            <img src="<%= placesToVisit[i].image %>" alt="<%= placesToVisit[i].place_name  %>">
        </div>
        <div>
            <h2><%= placesToVisit[i].place_name %></h2>
            <p><%= placesToVisit[i].description %></p>
            
            <a href="/post/<%= i %>">See post <br></a>
        </div>
    </div>
    <% } %>
</div>



